CREATE TABLE metric (
  _id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
  report_id INTEGER NOT NULL,
  metric_name TEXT NOT NULL,
  value REAL,
  mean REAL,
  p10 REAL,
  p90 REAL,
  FOREIGN KEY(report_id) REFERENCES report(_id) ON DELETE CASCADE
);

create_metric:
INSERT INTO metric(report_id, metric_name, value, mean, p10, p90)
VALUES (?, ?, ?, ?, ?, ?);

remove_all:
DELETE FROM metric;

get_metrics_by_report_id:
SELECT * FROM metric
WHERE report_id = ?;